{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "plugins": [{
      "name": "typescript-plugin-css-modules",
      "options": {
        "customMatcher": "\\.(c|sa|sc)ss$"
      }
    }]
  },
  "exclude": ["node_modules"]
}
